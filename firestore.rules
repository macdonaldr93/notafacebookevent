service cloud.firestore {
  match /databases/{database}/documents {
    match /events/{event}/timeline/{timelineId} {
      allow create;
      allow read;
    }

    match /events/{event}/guests/{guest} {
      allow create;
      allow read;
    }

    match /events/{event}/admin {
      allow create;
    }

    match /events/{event} {
      allow update, delete: if request.query.token == resource.data.admin.token;
      allow create;
      allow read;
    }

    match /{document=**} {
      allow read;
    }
  }
}
